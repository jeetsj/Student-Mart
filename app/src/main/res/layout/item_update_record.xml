<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:id="@+id/update_page_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/cherry_swash"
            android:text="Edit your item details"
            android:textAlignment="center"
            android:textColor="#009688"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:hint="Product Name"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_below="@id/update_page_name"
            tools:targetApi="o" />


        <EditText
            android:id="@+id/update_product_description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:hint="Product Description..."
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_below="@id/update_product_name"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/update_product_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:hint="Product Price..."
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_below="@id/update_product_description"
            tools:targetApi="o" />

        <EditText
            android:id="@+id/update_street_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:hint="Street"
            android:inputType="textMultiLine"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_below="@id/update_product_price"
            tools:targetApi="o" />

        <AutoCompleteTextView
            android:id="@+id/update_state_address"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:hint="State"
            android:layout_below="@+id/update_street_address"
            android:background="@drawable/et_custom"
            android:ems="10"/>

        <AutoCompleteTextView
            android:id="@+id/update_city_address"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/update_state_address"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="15dp"
            android:textSize="15sp"
            android:hint="City"
            android:layout_below="@+id/update_street_address"
            android:background="@drawable/et_custom"
            android:ems="10"/>

        <EditText
            android:id="@+id/update_zip_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Zipcode"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:padding="15dp"
            android:textSize="15sp"
            android:layout_below="@id/update_city_address"/>

        <TextView
            android:id="@+id/update_country_address"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="phone"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/et_custom"
            android:fontFamily="@font/cherry_swash"
            android:padding="15dp"
            android:textSize="15sp"
            android:text="USA"
            android:layout_below="@id/update_zip_address"/>

        <ImageButton
            android:id="@+id/updateImageButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/update_country_address"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/et_custom"
            android:text="Upload Profile Picture" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/update_country_address"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:clickable="false"
            android:fontFamily="@font/cherry_swash"
            android:hint="Click here to Upload Picture"
            android:padding="10dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_update_product"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateImageButton"
            android:background="@drawable/btn_custom"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@android:color/white"
            android:text="Update Product"/>

        <Button
            android:id="@+id/btn_update_cancel"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/updateImageButton"
            android:background="@drawable/btn_custom"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/btn_update_product"
            android:fontFamily="@font/cherry_swash"
            android:textColor="@android:color/white"
            android:text="Cancel"/>

    </RelativeLayout>
</ScrollView>